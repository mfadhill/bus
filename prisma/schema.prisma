generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String
  password String
  Bus      Bus[]
  Tiket    Tiket[]
}

model Bus {
  id          String   @id @default(uuid())
  userId      String
  jam         String
  date        DateTime
  from        String
  to          String
  price       Int
  total_tiket Int
  user        User     @relation(fields: [userId], references: [id])
  Tiket       Tiket[]
}

model Tiket {
  id     String   @id @default(uuid())
  NIK    String
  date   DateTime
  gender String
  phone  String
  user   User     @relation(fields: [userId], references: [id])
  userId String
  bus    Bus      @relation(fields: [busId], references: [id])
  busId  String
}
